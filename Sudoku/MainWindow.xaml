<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sudoku" Height="350" Width="525">
    <Grid >
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="299" Margin="122,10,0,0"
                VerticalAlignment="Top" Width="385" >
            <Grid HorizontalAlignment="Left" Height="298" VerticalAlignment="Top" Width="384" Margin="0,-1,-1,0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="99*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="99*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="32*"/>
                    <ColumnDefinition Width="32*"/>
                    <ColumnDefinition Width="32*"/>
                </Grid.ColumnDefinitions>
            </Grid>

        </Border>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="115" Margin="10,194,-1,0"
                VerticalAlignment="Top" Width="106">
            <Image x:Name="Logo" Source="resources/logo-pjatk.png" Margin="0,0,1,1" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="27" Margin="10,162,0,0"
                VerticalAlignment="Top" Width="106">
            <Button Content="Reset" Click="ResetButtonClick" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="27" Margin="10,133,0,0"
                VerticalAlignment="Top" Width="106">
            <Button Content="Nowa gra" Click="NewGameClick" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="88" Margin="10,10,0,0"
                VerticalAlignment="Top" Width="106"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="27" Margin="10,103,0,0" VerticalAlignment="Top" Width="106">
            <Button Content="Sprawdź" Click="CheckButtonClick"/>
        </Border>


    </Grid>
</Window>