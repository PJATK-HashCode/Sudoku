<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sudoku" Height="1080" Width="1920">
    <DockPanel>
        <StackPanel>

            <TextBlock Height="82" TextWrapping="Wrap" Text="Czas: " Width="270" FontSize="50"
                       Margin="0,25,0,0" TextAlignment="Center" FontWeight="DemiBold" />

            <TextBlock Height="82" TextWrapping="Wrap" Text="{Binding}" Width="270" FontSize="50"
                       Margin="0,25,0,0" TextAlignment="Center" FontWeight="DemiBold" />
            <Rectangle Fill="Black" Height="7" Stroke="Black" Width="322" Margin="0,10,0,0" />
            <Image x:Name="Logo" Height="300" Width="300" Source="resources/logo-pjatk.png" Margin="10,500,-2,-728" />
            <Button Content="Nowa Gra" Height="96" Width="296" FontSize="35" Margin="5,0,0,0" />
            <Button Content="Sprawdź" Height="96" Width="296" FontSize="35" Margin="5,10,0,0" />

            <Rectangle Fill="Black" Height="7" Stroke="Black" Width="322" Margin="0,150,0,0" />
        </StackPanel>
        <Border x:Name="BoardCointainer" Height="1020" Padding="20"
                Width="1550" />
    </DockPanel>
</Window>